    <!-- الإشعارات -->
    <div id="toast" class="toast"></div>

    <!-- JavaScript -->
    <script>
        // تكوين Firebase
        const firebaseConfig = {
            apiKey: "your-api-key",
            authDomain: "your-project.firebaseapp.com",
            databaseURL: "https://your-project.firebaseio.com",
            projectId: "your-project",
            storageBucket: "your-project.appspot.com",
            appId: "your-app-id"
        };

        // تهيئة Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const database = firebase.database();

        // إدارة الحالة
        let currentUser = null;

        // تسجيل الدخول
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            auth.signInWithEmailAndPassword(email, password)
                .then((userCredential) => {
                    currentUser = userCredential.user;
                    showApp();
                    showToast('تم تسجيل الدخول بنجاح', 'success');
                })
                .catch((error) => {
                    showToast('خطأ في تسجيل الدخول: ' + error.message, 'error');
                });
        });

        // إظهار/إخفاء الصفحات
        function showApp() {
            document.getElementById('loginPage').style.display = 'none';
            document.getElementById('app').style.display = 'block';
            loadDashboardData();
        }

        function showDashboard() {
            hideAllPages();
            document.getElementById('dashboardPage').style.display = 'block';
            loadDashboardData();
        }

        function showDebts() {
            hideAllPages();
            document.getElementById('debtsPage').style.display = 'block';
            // سيتم تحميل صفحة الديون هنا
        }

        function showQat() {
            hideAllPages();
            document.getElementById('qatPage').style.display = 'block';
            // سيتم تحميل صفحة القات هنا
        }

        function showReports() {
            hideAllPages();
            document.getElementById('reportsPage').style.display = 'block';
            // سيتم تحميل صفحة التقارير هنا
        }

        function showSettings() {
            hideAllPages();
            document.getElementById('settingsPage').style.display = 'block';
            // سيتم تحميل صفحة الإعدادات هنا
        }

        function hideAllPages() {
            const pages = document.querySelectorAll('.container > div');
            pages.forEach(page => page.style.display = 'none');
        }

        // تحميل بيانات لوحة التحكم
        function loadDashboardData() {
            if (!currentUser) return;

            const userId = currentUser.uid;
            
            // جلب بيانات الديون
            database.ref('debts/' + userId).once('value')
                .then((snapshot) => {
                    let totalDebts = 0;
                    let totalPaid = 0;
                    const debts = [];

                    snapshot.forEach((childSnapshot) => {
                        const debt = childSnapshot.val();
                        totalDebts += debt.amount;
                        totalPaid += debt.paid || 0;
                        debts.push(debt);
                    });

                    // تحديث الإحصائيات
                    document.getElementById('totalDebts').textContent = totalDebts + ' ر.ي';
                    document.getElementById('totalPaid').textContent = totalPaid + ' ر.ي';
                    document.getElementById('remainingDebts').textContent = (totalDebts - totalPaid) + ' ر.ي';

                    // تحديث الجدول
                    updateRecentDebtsTable(debts.slice(0, 5));
                });

            // جلب بيانات القات
            database.ref('qat/' + userId).once('value')
                .then((snapshot) => {
                    let totalStock = 0;
                    snapshot.forEach((childSnapshot) => {
                        const qat = childSnapshot.val();
                        totalStock += qat.quantity || 0;
                    });
                    document.getElementById('qatStock').textContent = totalStock + ' كجم';
                });
        }

        // تحديث جدول الديون الحديثة
        function updateRecentDebtsTable(debts) {
            const tbody = document.getElementById('recentDebtsTable');
            tbody.innerHTML = '';

            debts.forEach(debt => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${debt.name}</td>
                    <td>${debt.amount} ر.ي</td>
                    <td>${new Date(debt.date).toLocaleDateString('ar-EG')}</td>
                    <td>${debt.paid >= debt.amount ? 'مسدد' : 'غير مسدد'}</td>
                `;
                tbody.appendChild(row);
            });
        }

        // إظهار الإشعارات
        function showToast(message, type = 'info') {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = 'toast show';
            
            // ألوان مختلفة لأنواع الإشعارات
            if (type === 'success') toast.style.background = 'var(--success)';
            else if (type === 'error') toast.style.background = 'var(--danger)';
            else if (type === 'warning') toast.style.background = 'var(--warning)';
            else toast.style.background = 'var(--info)';

            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }

        // تسجيل الخروج
        function logout() {
            auth.signOut().then(() => {
                currentUser = null;
                document.getElementById('app').style.display = 'none';
                document.getElementById('loginPage').style.display = 'flex';
                showToast('تم تسجيل الخروج بنجاح');
            });
        }

        // التحقق من حالة المستخدم عند تحميل الصفحة
        auth.onAuthStateChanged((user) => {
            if (user) {
                currentUser = user;
                showApp();
            }
        });

        // دالة إنشاء حساب جديد (للتطوير)
        function showRegister() {
            const email = prompt('أدخل البريد الإلكتروني:');
            const password = prompt('أدخل كلمة المرور:');
            
            if (email && password) {
                auth.createUserWithEmailAndPassword(email, password)
                    .then(() => {
                        showToast('تم إنشاء الحساب بنجاح');
                    })
                    .catch(error => {
                        showToast('خطأ في إنشاء الحساب: ' + error.message, 'error');
                    });
            }
        }
    </script>
</body>
</html>
