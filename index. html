                </ul>
            </div>
        </nav>

        <!-- المحتوى -->
        <div class="container">
            <!-- لوحة التحكم -->
            <div id="dashboardPage" class="dashboard">
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>إجمالي الديون</h3>
                        <div class="stat-number" id="totalDebts">0 ر.ي</div>
                    </div>
                    <div class="stat-card">
                        <h3>المسدد</h3>
                        <div class="stat-number" id="totalPaid">0 ر.ي</div>
                    </div>
                    <div class="stat-card">
                        <h3>المتبقي</h3>
                        <div class="stat-number" id="remainingDebts">0 ر.ي</div>
                    </div>
                    <div class="stat-card">
                        <h3>مخزون القات</h3>
